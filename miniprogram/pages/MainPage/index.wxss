page{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: start;
  align-items: center;
  background-color: "none";
  overflow: hidden;
  /* padding-top: 25%; */
  position: relative;
  margin: 0;
}

.form-cell {
  padding: 0;
}

.slide {
  display: flex;
  align-items: center;
  padding: 10px;
  position: relative;
}

.title {
  font-size: 12px;
}

.title_xiongxiong {
    padding-left: 20px;
    width: 170px;
    /* float: left; */
    font-size: 12px;
  }

  .title_mimi {
      width: 170px;
